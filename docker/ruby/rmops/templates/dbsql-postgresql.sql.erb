-- Database URL: <%= uri %>
-- Run the following command to connect to the database host as an admin user:
-- psql -U <admin-user> -h <%= db.host %>
DROP DATABASE IF EXISTS <%= db.name %>;
DROP USER IF EXISTS <%= db.user %>;
CREATE USER <%= db.user %> ENCRYPTED PASSWORD '<%= db.pass %>';
GRANT <%= db.user %> TO current_user;
CREATE DATABASE <%= db.name %> ENCODING 'UTF8' OWNER <%= db.user %>;
\c <%= db.name %>;
GRANT ALL ON SCHEMA PUBLIC TO <%= db.user %>;
